            android:name=".login.GoogleLoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인 화면 -->
        <activity android:name=".MainActivity" />

        <!-- 아래 Activity들은 그대로 유지 -->
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".word.WordListActivity" />
        <activity android:name=".word.WordDetailActivity" />
        <activity android:name=".search.SearchActivity" />
        <activity android:name=".stats.StatsDashboardActivity" />
        <activity android:name=".wrongnote.WrongNoteActivity" />
        <activity android:name=".wrongnote.WrongNoteDetailActivity" />
        <activity android:name=".quiz.QuizActivity" />
